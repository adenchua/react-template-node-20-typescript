{
  "compilerOptions": {
    "target": "ES5",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["DOM", "ES2022"],
    "jsx": "react-jsx",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "ts-node": {
    "compilerOptions": {
        "module": "CommonJS"
     }
  }
}
